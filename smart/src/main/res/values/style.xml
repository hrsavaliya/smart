<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="AppTheme.DialogTheme" parent="Theme.AppCompat.Light.Dialog">

        <!-- app abar color in Activties Task manager -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="creativeDialogTheme">
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:textColor">#000000</item>
        <item name="android:windowAnimationStyle">@style/PopupDialogAnimation</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fadein</item>
        <item name="android:windowExitAnimation">@anim/fadeout</item>
        <!--         <item name="android:windowEnterAnimation">@anim/modal_in</item> -->
        <!--         <item name="android:windowExitAnimation">@anim/modal_out</item> -->
    </style>

    <style name="AppTheme.AdAttribution" parent="AppTheme">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:background">#ffcc66</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:text">@string/ad_attribution</item>
        <item name="android:height">15dp</item>
        <item name="android:width">15dp</item>
    </style>

    <style name="AdLoadingDialogTheme">
        <item name="android:windowBackground">@color/dark_alpha50</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/PopupDialogAnimation</item>
    </style>

    <style name="PopupDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fadein</item>
        <item name="android:windowExitAnimation">@anim/fadeout</item>
    </style>

    <style name="InterstitialDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fadein</item>
        <item name="android:windowExitAnimation">@anim/fadeout</item>
    </style>

    <style name="AppTheme.AdAttribution_Left">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:background">@drawable/ad_bg</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">15px</item>
        <item name="android:minHeight">15px</item>
        <item name="android:text">Ad</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.AdAttribution_Right">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:background">@drawable/ad_bg_cc</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Ad</item>
    </style>
</resources>